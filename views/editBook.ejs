<%- include('partials/header') %>
<div class="container">
  <h1 class="heading">Edit Book</h1>

  <form action="/edit/<%= book.id %>" method="POST" class="form">
    <!-- Use hidden input to simulate PUT request -->
    <input type="hidden" name="_method" value="PUT" />

    <div class="form-group">
      <label for="title" class="form-label">Title</label>
      <input
        type="text"
        id="title"
        name="title"
        class="form-input"
        value="<%= book.title %>"
        required
      />
    </div>

    <div class="form-group">
      <label for="author" class="form-label">Author</label>
      <input
        type="text"
        id="author"
        name="author"
        class="form-input"
        value="<%= book.author %>"
        required
      />
    </div>

    <div class="form-group">
      <label for="rating" class="form-label">Rating</label>
      <input
        type="number"
        id="rating"
        name="rating"
        class="form-input"
        value="<%= book.rating %>"
        min="0"
        max="5"
        step="0.1"
        required
      />
    </div>

    <div class="form-group">
      <label for="notes" class="form-label">Notes</label>
      <textarea id="notes" name="notes" class="form-input" rows="4" required>
        <%= book.notes %>
      </textarea>
    </div>

    <button type="submit" class="submit-button">Update Book</button>
  </form>
</div>
<%- include('partials/footer') %>
