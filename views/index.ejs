<%- include('partials/header') %>
<div class="container">
  <h1 class="heading">My Book Notes</h1>
  <a href="/add" class="add-book-button">Add New Book</a>

  <ul class="book-list">
    <% books.forEach(book => { %>
    <li class="book-item">
      <div class="book-cover">
        <img
          src="<%= book.cover_url %>"
          alt="<%= book.title %> Cover"
          class="cover-image"
        />
        <div class="rating">
          <p><%= book.rating %> â˜…</p>
        </div>
      </div>
      <div class="book-details">
        <h2 class="book-title"><%= book.title %> by <%= book.author %></h2>
        <p><strong>Notes:</strong> <%= book.notes %></p>
      </div>
      <div class="buttons">
        <!-- Edit Button on the left -->
        <a href="/edit/<%= book.id %>" class="edit-button">Edit</a>

        <!-- Delete Button on the right -->
        <form action="/delete/<%= book.id %>" method="POST" class="delete-form">
          <button type="submit" class="delete-button">Delete</button>
        </form>
      </div>
    </li>
    <% }); %>
  </ul>
</div>
<%- include('partials/footer') %>
